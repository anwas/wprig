{
	"theme": {
		"slug": "anwp-rig",
		"name": "Anwp Rig",
		"author": "Aivaras",
		"PHPNamespace": "Anwp_Rig\\Anwp_Rig"
	},
	"dev": {
		"browserSync": {
			"live": true,
			"proxyURL": "https://wp.lanbox.lt",
			"bypassPort": "8891",
			"https": true
		},
		"styles": {
			"stage": 3,
			"autoprefixer": {
				"grid": false
			},
			"importFrom": [
				"_custom-media.css"
			],
			"features": {
				"custom-media-queries": {
					"preserve": false
				},
				"custom-properties": {
					"preserve": true
				},
				"nesting-rules": true
			}
		},
		"debug": {
			"styles": false,
			"scripts": false,
			"phpcs": true
		}
	},
	"export": {
		"compress": true,
		"generatePotFile": true,
		"filesToCopy": [
			"LICENSE",
			"readme.txt",
			"screenshot.png",
			"assets/css/vendor/**/*.css",
			"assets/js/vendor/**/*.js"
		]
	}
}
